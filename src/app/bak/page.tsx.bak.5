"use client";

import { useAtom } from "jotai";
import { useEffect } from "react";
import HomePage from "@/components/HomePage";
import { APP_NAME } from "@/utils/constants";
import { loadCatalogsAtom } from "@/atoms/globalAtoms";

// Force static generation
export const dynamic = "force-static";

export default function Home() {
  const [, loadCatalogs] = useAtom(loadCatalogsAtom);

  // Set page title and initialize catalogs
  useEffect(() => {
    document.title = `${APP_NAME} - Training Plans for Splunky Teams`;
    
    // Load catalogs on app initialization
    loadCatalogs();
  }, [loadCatalogs]);

  return (
    <div id="homepage">
      <HomePage />
    </div>
  );
}