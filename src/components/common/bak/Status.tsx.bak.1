import React from "react";
import { useAtom } from "jotai";
import { Loader2, Zap } from "lucide-react";
import { workingAtom, workingMessageAtom } from "@/atoms/globalAtoms";

const Status: React.FC = () => {
  const [isWorking] = useAtom(workingAtom);
  const [workingMessage] = useAtom(workingMessageAtom);

  if (!isWorking) return null;

  return (
    <div
      id="status"
      className="fixed bottom-6 right-6 z-50 animate-in slide-in-from-bottom-2 fade-in-0 duration-300"
    >
      <div className="bg-gradient-to-r from-orange-500 to-pink-500 backdrop-blur-md rounded-2xl p-4 shadow-2xl border border-white/20 flex items-center gap-3 min-w-[200px]">
        <div className="relative">
          <Zap className="w-5 h-5 text-white animate-pulse" />
          <Loader2 className="w-5 h-5 text-white/70 animate-spin absolute inset-0" />
        </div>
        <div className="text-white font-medium">
          <div
            className="text-sm"
            style={{ textShadow: "0 1px 2px rgba(0, 0, 0, 0.3)" }}
          >
            {workingMessage || "Working..."}
          </div>
          <div className="flex gap-1 mt-1">
            <div className="w-1 h-1 bg-white/60 rounded-full animate-pulse delay-0"></div>
            <div className="w-1 h-1 bg-white/60 rounded-full animate-pulse delay-100"></div>
            <div className="w-1 h-1 bg-white/60 rounded-full animate-pulse delay-200"></div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default Status;
