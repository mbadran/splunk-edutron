    setStatus({ isWorking: true, message: "Opening Planner..." });
    setTimeout(() => {
      setStatus({ isWorking: false, message: "" });
    }, 100);
  };

  const handleLoadPlan = () => {
    setStatus({ isWorking: true, message: "Loading Plan Upload..." });
    setTimeout(() => {
      setStatus({ isWorking: false, message: "" });
    }, 100);
  };

  return (
