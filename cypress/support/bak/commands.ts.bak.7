    cy.get("#difference-value").invoke('text').then((diffText) => {
      // Remove commas and parse to number for comparison
      const actualDifference = parseInt(diffText.replace(/,/g, ''));
      expect(actualDifference).to.equal(expectedDifference);
    });
  });
});

